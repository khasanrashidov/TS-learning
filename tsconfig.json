{
  "compileOnSave": true, // true: points IDE to generate all js files on each save
  "compilerOptions": {
    "target": "ESNext",
    "removeComments": true,
    "outDir": "./app/",
    "sourceMap": true,
    "outFile": "./app/script.js",
    "noEmitOnError": true // true: stops the generation of js files if there are errors in ts files
  },
  "files": ["app.ts"],
  "exclude": ["app"]
}

// for more options in tsconfig.json look: https://www.typescriptlang.org/tsconfig/
